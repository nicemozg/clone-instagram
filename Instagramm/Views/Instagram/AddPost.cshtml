@model Instagramm.ViewModels.AddPostViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@{
    if (ViewBag.Error is not null)
    {
        <h3 class="text-danger">@ViewBag.Error</h3>
    }
    else
    {
        <h2>Создать новый пост</h2>
    }
}

<form method="post" asp-controller="Instagram" asp-action="AddPost" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
    <div>
        <label asp-for="Description"></label><br/>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="PostPictureFile"></label><br/>
        <input asp-for="PostPictureFile" type="file" id="PostPictureFile">
        <span asp-validation-for="PostPictureFile"></span>
    </div>
    <div>
        <input type="submit" value="Добавить пост"/>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
